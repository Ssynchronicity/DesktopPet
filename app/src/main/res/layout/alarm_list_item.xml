<?xml version="1.0" encoding="utf-8"?>
<com.example.song.pet.view.SwipeListLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alarm_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/single_bottom_border">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground">

        <!--<TextView-->
        <!--android:id="@+id/tv_top"-->
        <!--android:layout_width="80dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/new_ui_theme_alarm_edit"-->
        <!--android:gravity="center"-->
        <!--android:text="修改" />-->

        <TextView
            android:id="@+id/list_item_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#AAea312f"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <TextView
            android:id="@+id/list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="10dp"
            android:text="给家人打电话"
            android:textColor="@color/new_ui_theme_text_black"
            android:textSize="20sp"
            android:layout_marginStart="10dp" />

        <ImageView
            android:id="@+id/list_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:background="@drawable/alarm_item_icon"
            android:backgroundTint="@color/new_ui_theme_text_gray"
            app:layout_constraintTop_toBottomOf="@id/list_item_title"
            app:layout_constraintStart_toStartOf="@id/list_item_title"
            android:layout_marginTop="2dp" />
            <TextView
                android:id="@+id/list_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="17:30"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/list_item_icon"
                app:layout_constraintTop_toBottomOf="@id/list_item_title"
                android:textColor="@color/new_ui_theme_text_gray" />

        <ImageView
            android:id="@+id/list_item_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alarm_item_edit"
            android:backgroundTint="@color/new_ui_theme_text_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
